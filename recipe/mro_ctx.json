                "numvertices": "40",
                "maxemission": "89.5",
                "maxincidence": "120.0"
            },
            "isis.caminfo": {
                "from_": "{{no_extension_inputfile}}.cub",
                "to": "{{cam_info_file}}",
                "geometry": "yes",
                "isislabel": "yes",
                "originallabel": "yes",
                "statistics": "yes",
                "camstats": "yes",
                "linc": "100",
                "sinc": "100",
                "polygon": "yes",
                "inctype": "vertices",
                "increaseprecision": "yes",
                "numvertices": "40",
                "maxemission": "89.5",
                "maxincidence": "120.0",
                "spice": "no"
            }
        }
    },
    "pow": {
        "recipe": {
            "isis.mroctx2isis": {
                "from_": "{{inputfile}}",
